{% assign curr_date = site.time | date: "%Y-%m-%d" %}

{% for item in site.posts %}
	{% if item.news and item.carousel %}{% if item.expire > curr_date or item.carousel_expire > curr_date or item.expire == nil or item.carousel_expire == nil %}{{item.title}}{% endif %}
	{% elsif item.news %}{% if item.expire > curr_date or item.expire == nil %}{{item.title}}{% endif %}
	{% elsif item.carousel %}{% if item.carousel_expire > curr_date or item.carousel_expire == nil %}{{item.title}}{% endif %}{% endif %}
{% endfor %}
